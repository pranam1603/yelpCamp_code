<% layout('layouts/boilerplate') %>
    <h1>New Campground</h1>
    <form action="/campground/new" method="POST">
        <div>
            <label for="title">Title:</label>
            <input type="text" id="title" placeholder="Title" name="campground[title]">
        </div>
        <div>
            <label for="location">Location:</label>
            <input type="text" id="location" placeholder="location" name="campground[location]">
        </div>
        <button type="submit">Add Campground</button>
    </form>

    <a href="/campground">Back to campground</a>