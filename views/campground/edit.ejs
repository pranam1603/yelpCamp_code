<% layout('layouts/boilerplate') %>
    <h1>Edit Campground</h1>
    <form action="/campground/<%=campground.id%>/edit?_method=PATCH" method="POST">
        <div>
            <label for="title">Title:</label>
            <input type="text" id="title" placeholder="Title" name="campground[title]" value="<%=campground.title%>">
        </div>
        <div>
            <label for="location">Location:</label>
            <input type="text" id="location" placeholder="location" name="campground[location]"
                value="<%=campground.location%>">
        </div>
        <button type="submit">Edit Campground</button>
    </form>

    <a href="/campground/<%=campground.id%>">Back to campground</a>